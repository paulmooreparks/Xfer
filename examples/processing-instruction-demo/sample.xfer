    <! let showDebug ~false !>
    <! if _showDebug !>
    { debug { level "verbose" } }

    <! if <|DEBUG|>!>
    { debug { level "verbose" } }

    </ These are examples of future object-binding approaches />
    (
        year (getElementById (_document "date"))
        count (root (_document))

        MultiParam (_sampleClass year (getElementById (_document "date")) count (root (_document)))
    )

    [~true ~false ~true ~false]
    (~false ~true ~false ~true)
    {one\1 two#$2 three&%11}
