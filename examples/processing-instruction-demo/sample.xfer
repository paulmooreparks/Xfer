    alphabet {
        <! id "testpi" !> a '<\alpha\>'
        b '<\beta\>'
        g '<\gamma\>'
        d '<\delta\>'
        e '<\epsilon\>'
        z '<\zeta\>'
    }

    <! script (
        let rootNode (root (document "root"))
    )!>

    <! if eq["Linux" "<|PLATFORM|>"] !>
    profile{name"Bob"role"admin"verified~true}

    <! if gt[#64 #<|NUMBER_OF_PROCESSORS|>] !>
    mixedData ( "Sample" @2023-12-25@ *99.5 )
